---
import "@fontsource-variable/onest";

import AboutCard from "../components/AboutCard.astro";
import BriefcaseIcon from "../icons/Briefcase.astro";
import CodeIcon from "../icons/Code.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Experience from "../components/Experience.astro";
import Projects from "../components/Projects.astro";
import Certifications from "../components/Certifications.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Carlos Villalobos</title>
  </head>
  <body
    class="flex flex-col justify-center items-center pb-5 relative text-black dark:text-white"
    style="font-family: Onest Variable;"
  >
    <div
      class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full bg-gray-50 dark:bg-gray-950
  bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(217,216,255,0.5),rgba(255,255,255,0.9))]
  dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    >
    </div>
    <section
      class="section md:py-8 xl:py-16 max-w-8xl scroll-m-20 w-full mx-auto h-screen"
    >
      <div class="flex-grow h-3/5 flex justify-between py-5 px-5 xl:px-20">
        <AboutCard />
        <a
          href="/#experiencia"
          class="flex-grow-0 w-4/6 cursor-pointer hover:scale-105 transition"
        >
          <img class="w-full h-full rounded-xl" src="/exp2.webp" alt="" />
        </a>
      </div>

      <div class="flex-grow h-2/5 flex py-5 px-5 xl:px-20 justify-between">
        <!-- Contenido del segundo div (1/3 del alto restante) -->
        <a
          href="/#proyectos"
          class="w-full max-w-2xl mr-10 rounded-xl cursor-pointer hover:scale-105 transition"
        >
          <img class="w-full h-full rounded-xl" src="/projects.webp" alt="" />
        </a>
        <a
          href="/#certificaciones"
          class="w-full max-w-2xl rounded-xl cursor-pointer hover:scale-105 transition"
        >
          <img class="w-full h-full rounded-xl" src="/cert.webp" alt="" />
        </a>
      </div>
    </section>
    <div class="space-y-24">
      <SectionContainer id="experiencia">
        <h2
          class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
        >
          <BriefcaseIcon class="size-8" />
          Experiencia laboral
        </h2>
        <Experience />
      </SectionContainer>
      <SectionContainer id="proyectos">
        <h2
          class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
        >
          <CodeIcon class="size-8" />
          Proyectos
        </h2>
        <Projects />
      </SectionContainer>
      <SectionContainer id="certificaciones">
        <h2
          class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
        >
          <BriefcaseIcon class="size-8" />
          Certificaciones
        </h2>
        <Certifications />
      </SectionContainer>
    </div>
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
  }
</style>
