const TAGS = {
  REACT: {
    name: "React",
    class: "bg-black text-white",
    icon: React,
  },
  FLUTTER: {
    name: "Flutter",
    class: "bg-black text-white",
    icon: Flutter,
  },
  FIREBASE: {
    name: "Firebase",
    class: "bg-black text-white",
    icon: Firebase,
  },
};
const PROJECTS = [
  {
    title: "Cerezo",
    description:
      "Aplicación que utilizan los trabajadores de Cerezo cada día. La función principal es tomar pedidos y poder imprimirlos utilizando una impresora térmica. Dentro de la aplicación se puede administrar los usuarios, los clientes y los productos.",
    link: "http://localhost:4321/#proyectos",
    // github: "https://github.com/pheralb/svgl",
    image: "/cerezo.webp",
    tags: [TAGS.FLUTTER, TAGS.FIREBASE],
  },
  {
    title: "Condo Dashboard",
    description:
      "Plataforma en desarrollo para usuarios que quieran administrar sus condominios. Se pueden registrar propiedades, enviar notificaciones, crear bitácoras, crear reservaciones y administrar servicios.",
    link: "http://localhost:4321/#proyectos",
    image: "condo.webp",
    tags: [TAGS.REACT, TAGS.FIREBASE],
  },
];
---

<div class="relative mt-16 flex flex-col sm:gap-y-16 gap-y-10">
  {
    PROJECTS.map(({ image, title, description, tags, link }) => (
      <article class=" flex flex-col space-x-0 sm:space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class=" p-5 sm:p-0 w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt="Recién llegado vs 5 años en Nueva Zelanda"
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class=" p-4 sm:p-0 w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-sm ${tag.class} py-2 px-3 `}
                  >
                    <tag.icon class="size-5" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400 text-pretty">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
