---
const { title, description, website, credential, tags } = Astro.props;
import LinkInline from "./LinkInline.astro";
---

<article
  class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0"
>
  <div class="w-1/5 flex justify-center items-center">
    <website.icon class="size-28" />
  </div>
  <div class="w-3/4">
    <h3 class="text-2xl font-bold dark:text-gray-100">{title}</h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row my-2 gap-x-2">
        {
          tags.map((tag: any) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-sm ${tag.class} py-2 px-3 `}
              >
                <tag.icon class="size-5" />
                {tag.name}
              </span>
            </li>
          ))
        }
      </ul>
    </div>
    <p>{description}</p>
    {
      credential && (
        <LinkInline href={credential}>
          Ver credencial{" "}
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 icon icon-tabler icon-tabler-chevron-right"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <>
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path d="M9 6l6 6l-6 6" />
            </>
          </svg>
        </LinkInline>
      )
    }
  </div>
</article>
