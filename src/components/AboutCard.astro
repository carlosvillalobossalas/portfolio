---
import LinkedInIcon from "../icons/LinkedIn.astro";
import GithubIcon from "../icons/Github.astro";
import SocialPill from "./SocialPill.astro";
import avatar from "../images/avatar.jpg";
---

<div
  class="bg-gray-200 flex-grow-0 sm:w-2/6 mr-10 rounded-xl p-2 xl:p-2 flex-col items-center flex dark:text-black overflow-auto"
>
  <img
    src={avatar.src}
    alt={"Mi avatar"}
    class={`w-32 h-32 xl:w-36 xl:h-36 rounded-full object-cover mt-2`}
  />
  <h1 class="text-3xl font-semibold pt-2 xl:pt-5">Carlos Villalobos</h1>
  <h2 class="text-xl font-semibold">Software Developer</h2>
  <p class="text-left text-lg px-1 pt-2 xl:pt-5">
    Et Lorem dolor cillum culpa ex voluptate excepteur mollit. Id in occaecat
    ipsum veniam culpa dolore. Id cupidatat dolore qui do duis consectetur amet.
  </p>
  <nav class="flex gap-x-5 mt-3">
    <SocialPill href="https://www.linkedin.com/in/carlos-villalobos-salas/">
      <LinkedInIcon class="w-6 h-6" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://github.com/carlosvillalobossalas">
      <GithubIcon class="w-6 h-6" />
      Github
    </SocialPill>
  </nav>
</div>
