---
import SendEmail from "../icons/SendEmail.astro";
---

<div class="relative mt-16 border-b border-white border-opacity-30">
  <form
    class="mx-6 pb-4 flex flex-col gap-y-5 items-start"
    autocomplete="off"
    action="/"
    method="post"
  >
    <input
      type="email"
      placeholder="Email"
      class="bg-white text-lg p-2 text-black rounded w-5/6 outline-none sm:w-3/4 lg:w-1/3"
      autocomplete="off"
    />

    <input
      type="text"
      placeholder="Asunto"
      class="bg-white text-lg p-2 text-black rounded w-5/6 outline-none sm:w-3/4 lg:w-1/3"
      autocomplete="off"
    />
    <textarea
      placeholder="Mensaje"
      class="bg-white text-lg p-2 text-black rounded h-44 w-full outline-none lg:w-1/2"
    ></textarea>
    <button
      type="submit"
      class="text-black text-lg bg-white px-3 py-1 rounded-full flex items-center gap-x-2"
      ><SendEmail />{" "}Enviar
    </button>
  </form>
</div>
